set nocompatible
set t_Co=256
syntax enable

set number
set numberwidth=6
set cul
set laststatus=2
set nohlsearch
set incsearch
set ignorecase
set ruler
set showmatch
set statusline=%<%f\%h%m%r%=%-20.(line=%l\ \ col=%c%V\ \ totlin=%L%)\ \ \%h%m%r%=%-40(bytval=0x%B,%n%Y%)\%P


set autoindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set shiftround
set expandtab
set smartindent
set smarttab
set nowrap
